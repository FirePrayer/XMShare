<?xml version="1.0" encoding="utf-8"?>
<com.merpyzf.xmshare.ui.widget.SquareView xmlns:android="http://schemas.android.com/apk/res/android"
    android:foreground="@drawable/card_foreground"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_thumb_empty"
        android:scaleType="centerCrop"
        />

    <View
        android:id="@+id/view_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#40000000"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:clickable="false"
        android:layout_margin="2dp"
        android:src="@drawable/ic_cb_checked"
        android:tint="@color/colorAccent"
        />



</com.merpyzf.xmshare.ui.widget.SquareView>